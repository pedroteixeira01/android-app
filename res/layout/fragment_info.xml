<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quem somos ?"
                android:textColor="@color/main"
                android:textSize="34sp" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Mobal Motors é uma renomada empresa especializada na venda de veículos zero quilômetro. Com uma ampla variedade de marcas e modelos disponíveis, a Mobal Motors oferece opções para todos os gostos e necessidades dos clientes.      "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nossa equipe altamente capacitada está pronta para ajudar os clientes a encontrarem o veículo perfeito que se encaixe em seu estilo de vida e orçamento. Além disso, proporcionamos uma experiência de compra tranquila e sem complicações, desde o momento em que você entra em nossa concessionária até o momento em que sai dirigindo seu novo veículo."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Na Mobal Motors, a qualidade e a confiabilidade são prioridades. Trabalhamos apenas com fabricantes e fornecedores reconhecidos, garantindo que cada veículo oferecido em nossa loja atenda aos mais altos padrões de excelência. Cada carro passa por rigorosas inspeções para assegurar que esteja em perfeitas condições antes de ser entregue ao cliente."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Além da venda de veículos novos, também oferecemos serviços pós-venda de qualidade. Nossa equipe de especialistas em manutenção e reparo está pronta para ajudar a manter seu veículo em excelente estado ao longo dos anos. A Mobal Motors também oferece opções de financiamento flexíveis e seguros, tornando o processo de compra ainda mais acessível."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se você está em busca do carro dos seus sonhos, visite a Mobal Motors e descubra a excelência em vendas de veículos zero quilômetro. Estamos comprometidos em fornecer uma experiência excepcional, onde qualidade, confiabilidade e atendimento ao cliente se encontram em perfeita sintonia. Venha nos visitar e deixe-nos ajudá-lo a encontrar o carro perfeito para você."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contatos"
                android:textColor="@color/main"
                android:textSize="34sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="43dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mobalmotors@gmail.com"
                    android:textColor="#100F0F"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="43dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mensagem" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(21) 98765-4321"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="43sp"
                    android:layout_height="37sp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_telefone" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(21) 2424-1234"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>